@import "../../_common/common.wxss";
.c-modal{
  height: 100%;
  width: 750rpx;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: @z-index-modal;
  background-color: rgba(0, 0, 0, 0.65);
  display: flex;
  .content{
    z-index: @z-index-modal + 1;
    background: @c_foreground;
    position: relative;
    border-radius: 12rpx;
    overflow: hidden;
    margin: 25% auto 0;
  }
}
