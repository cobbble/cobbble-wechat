@import "../_common/common.wxss";
.c-input{
  font-size: @s_font_main;
  .title{
    display: inline-block;
    color: @c_font_main;
  }
  c-icon{
    position: absolute;
    top: 0;
    right: @s_space_normal;
    height: 30rpx;
    padding: (@s_line_list - 30rpx)/2 8rpx;
  }
  input{
    height: @s_line_list;
    line-height: @s_line_list;
    margin-right: @s_space_normal + @s_space_section;
  }
  .c-placeholder{
    color: @color_placeholder;
  }
  &.with-title{
    .title{
      float: left;
    }
    input{
      float: right;
      text-align: right;
      margin-right: 0;
      width: @s_list_content;
    }
    c-icon{
      display: none;
    }
  }
}
